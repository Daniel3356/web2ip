# High-Performance Web2IP Configuration
# This file contains configuration options for the high-performance mode

# System Configuration
ENABLE_HIGH_PERFORMANCE=true
DETAILED_LOGGING=true
CPU_CORES=4
MAX_MEMORY_GB=6

# Performance Tuning
WORKER_COUNT=800
BATCH_SIZE=2000
REQUEST_DELAY_MS=1
CONNECTION_TIMEOUT_SEC=30
MAX_CONNECTIONS_PER_WORKER=5
CONNECTION_POOL_SIZE=1000

# Thermal Management
THERMAL_THROTTLE_TEMP=70
HIGH_THERMAL_THROTTLE_TEMP=60
PREEMPTIVE_THROTTLE_TEMP=55

# Memory Management
MEMORY_PRESSURE_THRESHOLD=0.8
FORCE_GC_THRESHOLD=0.7
MAX_MEMORY_USAGE_GB=6

# Monitoring
METRICS_INTERVAL_SEC=30
HEALTH_CHECK_INTERVAL_SEC=10
LOG_RESOURCE_USAGE=true

# Error Handling
MAX_RETRIES=3
BACKOFF_MULTIPLIER=2.0
CIRCUIT_BREAKER_ENABLED=true
ERROR_RATE_THRESHOLD=0.05

# Network Configuration
KEEP_ALIVE_SEC=60
MAX_IDLE_CONNECTIONS=100
CONNECTION_CLEANUP_INTERVAL_SEC=300

# Database
DATABASE_PATH="recon_results.db"
CHECKPOINT_INTERVAL_MIN=3
WAL_MODE=true

# Logging
LOG_FILE="recon.log"
LOG_LEVEL="info"
LOG_ROTATION=true
MAX_LOG_SIZE_MB=100

# Security
RATE_LIMIT_ENABLED=true
RESPECT_ROBOTS_TXT=true
USER_AGENT="Web2IP-Scanner/1.0"

# Ports to scan
WEB_PORTS="80,443,3000,8080,8888,8443,5000"
INFRA_PORTS="21,22,23,139,161,3389"
MAIL_PORTS="25,465,587,110,995,143,993"
DATABASE_PORTS="3306,5432,6379,27017,1521,1433"

# Scheduling (for time-based operations)
TIMEZONE="America/Toronto"
FULL_POWER_START_HOUR=1
FULL_POWER_START_MINUTE=37
FULL_POWER_END_HOUR=6
FULL_POWER_END_MINUTE=30

# High-Performance Schedule
HIGH_PERFORMANCE_ENABLED=true
HIGH_PERFORMANCE_START_HOUR=0
HIGH_PERFORMANCE_START_MINUTE=0
HIGH_PERFORMANCE_END_HOUR=23
HIGH_PERFORMANCE_END_MINUTE=59

# Adaptive Features
ADAPTIVE_BATCH_SIZING=true
MIN_BATCH_SIZE=100
MAX_BATCH_SIZE=5000
ADAPTIVE_WORKER_SCALING=true
AUTO_THROTTLE_ENABLED=true

# Resource Limits
MAX_GOROUTINES=1000
MAX_OPEN_FILES=65536
MAX_CONNECTIONS=10000

# Alerting Thresholds
HIGH_MEMORY_USAGE_THRESHOLD=0.70
CRITICAL_MEMORY_USAGE_THRESHOLD=0.85
HIGH_CPU_LOAD_THRESHOLD=0.80
CRITICAL_CPU_LOAD_THRESHOLD=0.90
HIGH_ERROR_RATE_THRESHOLD=0.02
CRITICAL_ERROR_RATE_THRESHOLD=0.05

# Performance Optimization
ENABLE_PPROF=false
PPROF_PORT=6060
ENABLE_METRICS_EXPORT=false
METRICS_PORT=8080